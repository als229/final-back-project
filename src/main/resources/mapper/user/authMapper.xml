<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper namespace="com.kh.finalproject.auth.model.dao.AuthMapper">
  	
  
  <select id="loadUserByUserId"
          resultType="com.kh.finalproject.auth.model.dao.UserDTO">
  
  	SELECT
  			USER_NO userNo,
  			USER_ID userId,
  			REALNAME realName,
  			NICKNAME nickName,
  			EMAIL email
  	FROM
  			TB_USER
  	WHERE
  			USER_ID = #{userId}
  	
  
  </select>
  
  <select id="selectByfindId"
  		  parameterType="com.kh.finalproject.auth.model.dao.FindDTO"
  		  resultType="com.kh.finalproject.auth.model.dao.FindDTO">
  
  	SELECT
  		    USER_ID userId
  	FROM
  			TB_USER
  	WHERE
  			EMAIL = #{email}

  </select>
  
  <select id="selectByfindPw"
 		  parameterType="com.kh.finalproject.auth.model.dao.FindDTO"
  		  resultType="com.kh.finalproject.auth.model.dao.FindDTO">
  
  	SELECT
  			USER_ID userId,
  			EMAIL email
  	FROM
  			TB_USER
  	WHERE
  			USER_ID = #{userId}
  	AND
  			EMAIL = #{email}
  
  
  
  </select>
  
  
  
  
  
  
  </mapper>