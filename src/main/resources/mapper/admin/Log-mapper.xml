<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.finalproject.log.model.dao.LogMapper">

  <resultMap 
    id="userLogMap" 
    type="com.kh.finalproject.log.model.dto.UserLogDTO">
    <id property="logNo" column="LOG_NO"/>
    <result property="userNo" column="USER_NO"/>
    <result property="oldInfo" column="OLD_INFO"/>
    <result property="newInfo" column="NEW_INFO"/>
    <result property="createdTime" column="CREATED_TIME"/>
  </resultMap>

  <select
    id="findByUserLog" 
    resultMap="userLogMap">
    SELECT  LOG_NO
          , OLD_INFO
          , NEW_INFO
          , CREATED_TIME
      FROM  TB_USER_LOG
     WHERE  USER_NO = #{userNo}
     ORDER 
        BY  CREATED_TIME DESC

  </select>

  <insert 
    id="addByUserLog" 
    parameterType="com.kh.finalproject.log.model.vo.UserLogVO">
    INSERT 
      INTO  TB_USER_LOG 
        (
            LOG_NO
          , USER_NO
          , OLD_INFO
          , NEW_INFO
        )
    VALUES 
        (
            SEQ_LOG_NO.NEXTVAL
          , #{userNo}
          , #{oldInfo}
          , #{newInfo}
        )
  </insert>

</mapper>
